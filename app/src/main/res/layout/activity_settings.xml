<?xml version="1.0" encoding="utf-8"?>
<com.zcl.alive.widget.theme.ColorLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/both_match_style"
    android:background="?attr/background"
    android:orientation="vertical">

    <include layout="@layout/main_title" />


    <RelativeLayout
        android:id="@+id/rl_recommend"
        style="@style/settingItemStyle">

        <ImageView
            style="@style/settingItemImgStyle"
            android:background="@mipmap/share" />

        <TextView
            style="@style/settingItemTvStyle"
            android:text="@string/setting_recommend" />


    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_clearcache"
        style="@style/settingItemLittleMarginStyle">

        <ImageView
            style="@style/settingItemImgStyle"
            android:background="@mipmap/clear" />

        <TextView
            style="@style/settingItemTvStyle"
            android:text="@string/setting_recommend_clear" />

        <TextView
            android:id="@+id/tv_cache"
            style="@style/both_wrap_style"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:text="0kb" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_about"
        style="@style/settingItemStyle">

        <ImageView
            style="@style/settingItemImgStyle"
            android:background="@mipmap/about_us" />

        <TextView
            style="@style/settingItemTvStyle"
            android:text="@string/about" />


    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_feedback"
        style="@style/settingItemLittleMarginStyle">

        <ImageView
            style="@style/settingItemImgStyle"
            android:background="@mipmap/feedback" />

        <TextView
            style="@style/settingItemTvStyle"
            android:text="@string/feedback" />
    </RelativeLayout>

</com.zcl.alive.widget.theme.ColorLinearLayout>
